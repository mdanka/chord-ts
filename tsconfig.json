{
    "compilerOptions": {
      "declaration": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "lib": [
        "dom",
        "es5"
      ],
      "module": "commonjs",
    //   "moduleResolution": "node",
      "noEmitHelpers": false,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "outDir": "lib",
      "sourceMap": true,
      "strict": true,
      "strictNullChecks": true,
      "target": "es5"
    },
    "exclude": [
      "test",
      "node_modules",
      "lib"
    ]
  }